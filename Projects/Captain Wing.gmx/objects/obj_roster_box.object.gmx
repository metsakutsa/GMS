    //If the pos is above 0 then just decrease it
    if pos &gt; 0 {
        pos--;
    }
    //If it is 0 then keep it there until roster position is also 0
    else {
        //If roster position is above 0 then just decrease it
        if obj_roster.pos &gt; 0 {
            obj_roster.pos--;
        }
        //Else if roster is also 0 then we have to go to max for both positions
        else if obj_roster.pos = 0 {
           obj_roster.pos = array_length_1d(obj_roster.character)-1;
           pos = 4;
        }
    }
}
